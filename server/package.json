{
  "name": "cafe-now-server",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production bun run src/index.ts",
    "dev": "NODE_ENV=development bun run --watch src/index.ts",
    "server": "bun x json-server template-data.json",
    "build": "bun build src/index.ts --outdir ./out --target=bun --minify",
    "start:build": "bun run out/index.js"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^4.17.21"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "zod": "^3.22.4",
    "zod-validation-error": "^3.0.0"
  }
}
